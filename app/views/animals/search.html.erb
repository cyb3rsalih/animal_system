<div class="row">
  <div class="col">
<div class="form-border">
    <div class="form-group search ">
    <h2>Hayvan Arama</h2>
        <%= form_tag(hayvan_ara_path) do %>
            <small id="KupeHelp" class="form-text text-muted">Yanlızca küpe numarası ile arama yapabilirsiniz</small>
            <%= number_field_tag :earring_no, class:"form-control", placeholder:"Küpe Numarasını Girin" %>
            <%= submit_tag 'Ara', class: "btn btn-success" %>
        <% end %>
    </div>
</div>
</div>
</div>

<% if @animal.present? %>
    <div class="form-border">
        <div class="form-group search ">
            <h2>Bulunan Kayıt</h2>
      <table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Hayvan'ın Bilgileri</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Küpe No</th>
      <td><%= @animal.earring_no %></td>
    </tr>
    <tr>
      <th scope="row">Adı</th>
      <td><%= @animal.name %></td>
    </tr>
    <tr>
      <th scope="row">Resim</th>
      <td><%= image_tag(@animal.image.url(:medium)) %></td>
    </tr>
    <tr>
      <th scope="row">Cinsiyeti</th>
      <td><%= @animal.gender %></td>
    </tr>
    <tr>
      <th scope="row">Türü</th>
      <td><%= @animal.animal_type %></td>
    </tr>
    <tr>
      <th scope="row">Durum</th>
      <td><%= @animal.state %></td>
    </tr>
    <tr>
      <th scope="row">Doğum Tarihi</th>
      <td><%= @animal.birthdate %></td>
    </tr><tr>
      <th scope="row">Ana Küpe No</th>
      <td><%= @animal.mother_earring_no %></td>
    </tr><tr>
      <th scope="row">Annesi'nin Resmi</th>
      <td><%= image_tag(@animal.mother_image.url(:medium)) %></td>
    </tr>
    <tr>
      <th scope="row">Koğuştuğu Tarih</th>
      <td><%= @animal.mating_date %></td>
    </tr>
    <tr>
      <th scope="row">Danaları</th>
      <td>
        <% @animal.calves.each do |c| %>
          <div>
            <%= image_tag(c.image.url(:medium)) %>
            <strong><%= c.info %></strong>
          </div>
          <br/>
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">Aşıları</th>
      <td>
        <% @animal.scions.each do |scion| %>
          <div>
            <%= scion.name %> - <%= scion.scion_date.strftime("%d/%m/%Y") %>
            <%= link_to '<i class="fa fa-trash"></i>'.html_safe, animal_scions_path(@animal, scion), method: :delete, data: {confirm: "Kaydı silmek istediğinizden emin misiniz?"}%>
          </div>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
        </div>
    </div>
<% end %>